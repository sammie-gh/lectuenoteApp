<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="0dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:weightSum="4"
        android:background="@color/materialBlue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/pdf_name"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="start"
            android:background="@color/green"
            android:text="PDF Name"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/edtYear"
            android:layout_width="match_parent"
            android:text="Level 200"
            android:background="@color/AccentBack"
            android:layout_weight="8"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edtCourse"
            android:layout_width="match_parent"
            android:text="Course name"
            android:layout_weight="8"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="invisible"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edtLectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="8"

            android:gravity="start"
            android:text="Lecture name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>



</android.support.v7.widget.CardView>